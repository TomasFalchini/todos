    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "migrate": "tsx src/database/migrations/runner.ts"
  },
  "dependencies": {
    "@shared/lib": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
