{
  "name": "@todos/backend",
  "version": "1.0.0",
  "description": "Backend API para aplicaci√≥n de todos",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
